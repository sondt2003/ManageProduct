<%- include('../inc/top.ejs',srcStyle="Login" ) %>
    <div class="login">
        <h1 class="text-center">Register</h1>

        <form class="needs-validation" action="" method="post" onsubmit="return checkForm()">
            <div class="form-group was-validated">
                <label class="form-label" for="UserName">User Name</label>
                <input class="form-control" name="UserName" type="text" id="UserName">
            </div>
            <div class="form-group was-validated">
                <label class="form-label" for="email">Email address</label>
                <input class="form-control" name="Email" type="email" id="email">
            </div>
            <div class="form-group was-validated">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" name="Password" type="password" id="password">
            </div>
            <div class="form-group was-validated">
                <label class="form-label" for="ConfirmPassword">Confirm Password</label>
                <input class="form-control" type="password" id="ConfirmPassword">
                <div id="invalid" class="invalid-feedback" style="display: none;">
            </div>
        <div  style="color:red"><%= msg %></div>
            <div class="form-group form-check">
                <input class="form-check-input" name="remember" type="checkbox" id="check">
                <label class="form-check-label" for="check">Remember me</label>
            </div>
            <input class="btn btn-success w-100" type="submit" value="Submit">
        </div>
        </form>

    </div>
    <%- include('../inc/bottom.ejs') %>
        <script>
            const checkForm = () => {
                const UserName = document.getElementById("UserName").value;
                const email = document.getElementById("email").value;
                const password = document.getElementById("password");
                const ConfirmPassword = document.getElementById("ConfirmPassword");
                const invalid = document.getElementById("invalid");
                if(UserName.length==0 | email.length==0 | password.length==0| ConfirmPassword.length==0){
                    invalid.innerText="Vui lòng Nhập Đủ Thông Tin";
                    invalid.style.display = "block"
                console.log(UserName.length)
                    return false;
                } else {
                    invalid.style.display = "none";
                }
                if (password.value === ConfirmPassword.value) {
                    invalid.style.display = "none";
                } else {
                    invalid.style.display = "block"
                    invalid.innerText="Password và confirm password Không Giống Nhau";
                    return false;
                }
                return true;
            }
        </script>